<% include header %>
  <h2>Administration</h2>
  <fieldset name="depots">
    <legend>Dépôts</legend>
    <p>État de la base de connaissances<br/>
      <button class="btn" id="pkb-status" title="mettre à jour la base">
        <i class="icon-refresh"></i> <span>inconnu</span>
      </button>
      <button class="btn" id="pkb-status-refresh" title="actualiser le statut de la base">
        <i class="icon-refresh"></i>
        <img src="/img/loader.gif" class="loader ninja" width="18" />
      </button>
    </p>
    <p>État des parseurs<br/>
      <button class="btn" id="parsers-status" title="mettre à jour les parseurs">
        <i class="icon-refresh"></i> <span>inconnu</span>
      </button>
      <button class="btn" id="parsers-status-refresh" title="actualiser le statut des parseurs">
        <i class="icon-refresh"></i>
        <img src="/img/loader.gif" class="loader ninja" width="18" />
      </button>
    </p>
  </fieldset>

  <fieldset name="utilisateurs">
    <legend>Utilisateurs</legend>
    <form id="user-form" class="form-inline" method="POST" action="/users/">
        <input type="text" id="username" name="username" placeholder="Identifiant">
        <input type="password" id="password" name="password" placeholder="Mot de passe">
        <button type="submit" id="submit" class="btn">Créer</button>
        <img src="/img/loader.gif" class="loader ninja" width="32" />
        <img src="/img/success-big.png" class="success-img ninja" width="32" />
        <div class="form-error" class="ninja" style="color: red"></div>
        <div class="form-success ninja" style="color: #0046AF">l'utilisateur a bien été ajouté</div>
    </form>
    <div id="users-list">
      <p class="refresh-loader ninja"><img src="/img/loader.gif" class="loader" width="18" /> <em>actualisation...</em></p>
      <p class="refresh-error ninja" style="color: red;">la liste n'a pas pu être actualisée</p>
      <table id="users-table" class="table table-hover">
        <tr>
          <th>Identifiant</th>
          <th>Groupe</th>
        <tr>
      </table>
    </div>
  </fieldset>
  <script src="/js/admin.js"></script>
<% include footer %>