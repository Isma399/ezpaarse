  <modal id="register-modal" class="ui segment small modal" ng-controller="RegisterCtrl">
    <div class="ui small error message" ng-show="error">
      <div class="header">Erreur</div>
      {{ error }}
    </div>

    <form name="registerForm" class="ui form" ng-submit="register(registerForm.$valid)" novalidate>
      <div class="ui inverted dimmer" ng-class="{true: 'active', false: 'disabled'}[loading]">
        <div class="ui text loader">Soumission...</div>
      </div>

      <div class="field" ng-class="{'error': registerForm.userid.$invalid && !registerForm.userid.$pristine}">
        <label>Adresse email</label>
        <div class="ui left labeled icon input">
          <input type="text" name="userid" placeholder="Adresse email" ng-model="formData.userid" ng-pattern="emailRegexp" required>
          <i class="user icon"></i>
          <div class="ui corner label">
            <i class="icon asterisk"></i>
          </div>
        </div>
      </div>
      <div class="field" ng-class="{'error': registerForm.password.$invalid && !registerForm.password.$pristine}">
        <label>Mot de passe</label>
        <div class="ui left labeled icon input">
          <input type="password" name="password" ng-model="formData.password" required>
          <i class="lock icon"></i>
          <div class="ui corner label">
            <i class="icon asterisk"></i>
          </div>
        </div>
      </div>
      <div class="field" ng-class="{'error': registerForm.confirm.$invalid && !registerForm.confirm.$pristine}">
        <label>Confirmer le mot de passe</label>
        <div class="ui left labeled icon input">
          <input type="password" name="confirm" ng-model="formData.confirm" required>
          <i class="lock icon"></i>
          <div class="ui corner label">
            <i class="icon asterisk"></i>
          </div>
        </div>
      </div>

      <div class="ui two fluid buttons" mp-semantic>
        <button type="submit" class="ui green button" ng-disabled="registerForm.$invalid" ng-class="{false: 'disabled'}[registerForm.$valid]">S'enregistrer</button>
        <div class="or" data-text="ou"></div>
        <button type="reset" class="ui close button">Annuler</button>
      </div>
    </form> <!-- register-modal -->
  </modal>
