  <div class="ui segment small modal" ez-attached-to="#register-button" ng-controller="RegisterCtrl">
    <div class="ui small error message" ng-show="error">
      <div class="header">Erreur</div>
      {{ error }}
    </div>

    <form class="ui form" ng-submit="register()">
      <div class="ui inverted dimmer" ng-class="{true: 'active', false: 'disabled'}[loading]">
        <div class="ui text loader">Soumission...</div>
      </div>

      <div class="field">
        <label>Adresse email</label>
        <div class="ui left labeled icon input">
          <input type="text" placeholder="Adresse email" ng-model="formData.userid">
          <i class="user icon"></i>
          <div class="ui corner label">
            <i class="icon asterisk"></i>
          </div>
        </div>
      </div>
      <div class="field">
        <label>Mot de passe</label>
        <div class="ui left labeled icon input">
          <input type="password" ng-model="formData.password">
          <i class="lock icon"></i>
          <div class="ui corner label">
            <i class="icon asterisk"></i>
          </div>
        </div>
      </div>
      <div class="field">
        <label>Confirmer le mot de passe</label>
        <div class="ui left labeled icon input">
          <input type="password" ng-model="formData.confirm">
          <i class="lock icon"></i>
          <div class="ui corner label">
            <i class="icon asterisk"></i>
          </div>
        </div>
      </div>

      <div class="ui two fluid buttons" mp-semantic>
        <button type="submit" class="ui green button">S'enregistrer</button>
        <div class="or" data-text="ou"></div>
        <button type="reset" class="ui close button">Annuler</button>
      </div>
    </form> <!-- register-modal -->
  </div>
