  <modal id="login-modal" class="ui segment small modal" ng-controller="LoginCtrl">
    <div class="ui small error message" ng-show="error">
      <div class="header" translate>login+error</div>
      {{ error }}
    </div>

    <form name="loginForm" id="login-form" class="ui form" ng-submit="login(loginForm.$valid)" novalidate>
      <div class="ui inverted dimmer" ng-class="{true: 'active', false: 'disabled'}[loading]">
        <div class="ui text loader" translate>login+connecting</div>
      </div>

      <div class="field" ng-class="{'error': loginForm.userid.$invalid && !loginForm.userid.$pristine}">
        <label translate>login+identifier</label>
        <div class="ui left labeled icon input">
          <input type="text" name="userid" placeholder="{{ 'login+email' | translate }}" ng-model="credentials.userid" ng-pattern="emailRegexp" required>
          <i class="user icon"></i>
          <div class="ui corner label"><i class="icon asterisk"></i></div>
        </div>
      </div>
      <div class="field" ng-class="{'error': loginForm.password.$invalid && !loginForm.password.$pristine}">
        <label translate>login+password</label>
        <div class="ui left labeled icon input">
          <input type="password" name="password" ng-model="credentials.password" required>
          <i class="lock icon"></i>
          <div class="ui corner label"><i class="icon asterisk"></i></div>
        </div>
      </div>
      <div class="field" ng-class="{'error': loginForm.confirm.$invalid && !loginForm.confirm.$pristine}">
        <div class="ui checkbox">
          <input type="checkbox" id="rememberMe" ng-model="credentials.remember">
          <label for="rememberMe" translate>login+rememberme</label>
        </div>
      </div>

      <div class="ui two fluid buttons" mp-semantic>
        <button type="submit" class="ui teal button" translate>login+signin</button>
        <div class="or" data-text="ou"></div>
        <button type="reset" class="ui close button" translate>login+cancel</button>
      </div>
    </form> <!-- login-modal -->
  </modal>
