<% include header %>

<% if (report) { %>
  <h1>Rapport d'ex√©cution</h1>
  <table class="table table-bordered table-hover">
  <% for (var group in report) { %>
    <tr><th colspan="2"><%= group[0].toUpperCase() + group.substring(1) %></th></tr>
    
    <% for (var key in report[group]) { %>
    <tr>
      <td><%= key %></td>
      <% if (/^http/.test(report[group][key])) { %>
        <td><a href="<%= report[key] %>"><%= report[group][key] %></a></td>
      <% } else { %>
        <td><%= report[group][key] %></td>
      <% } %>
    </tr>
    <% } %>
  <% } %>
  </table>
<% } else { %>
  <p>Le rapport que vous recherchez n'existe pas.</p>
<% } %>

<% include footer %>