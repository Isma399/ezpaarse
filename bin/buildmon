#!/bin/bash
#
# Download and compile mon
#

set -e

EZPAARSE_PATH="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )"

mkdir -p $EZPAARSE_PATH/build/
if [ ! -f $EZPAARSE_PATH/build/mon/mon ]; then
  git clone http://github.com/ezpaarse-project/mon.git ./build/mon
  cd $EZPAARSE_PATH/build/mon/
  make
fi
echo "$EZPAARSE_PATH/build/mon/mon is ready"