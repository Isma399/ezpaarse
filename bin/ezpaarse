#!/bin/bash -e
#
# ezPAARSE start stop restart status script
#

set -e

EZPAARSE_PATH="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )"
PATH=$EZPAARSE_PATH/build/nvm/bin/latest/:$EZPAARSE_PATH/node_modules/.bin:/usr/local/bin:/usr/bin:/bin
EZPAARSE_PIDFILE="$EZPAARSE_PATH/ezpaarse.pid"
PORT=$($EZPAARSE_PATH/bin/readconfig --key EZPAARSE_NODEJS_PORT)

# check make build has been called
if [ ! -d $EZPAARSE_PATH/build/ ]; then
  echo "ezPAARSE error: please run make build before anything" >&2
  exit 1
fi

# if ezpaarse pid file doesn't exist, create a fake one
if [ ! -f $EZPAARSE_PIDFILE ]; then
  echo "XXXX" > $EZPAARSE_PIDFILE
fi

ezpaarse_start() {
  forever start -a -l $EZPAARSE_PATH/logs/forever.log \
                  -o $EZPAARSE_PATH/logs/out.log \
                  -e $EZPAARSE_PATH/logs/err.log \
                  --pidFile $EZPAARSE_PIDFILE \
                  --sourceDir $EZPAARSE_PATH app.js 1>/dev/null
}

ezpaarse_stop() {
  forever stop --sourceDir $EZPAARSE_PATH app.js 1>/dev/null
}

ezpaarse_restart() {
  forever restart --sourceDir $EZPAARSE_PATH app.js 1>/dev/null
}

case $1 in

  start)
    if [ -d /proc/`cat $EZPAARSE_PIDFILE` ]; then
      echo "ezPAARSE is already running, listening on http://localhost:$PORT/"
      exit 0
    else
      ezpaarse_start
      if [ -d /proc/`cat $EZPAARSE_PIDFILE` ]; then
        echo "ezPAARSE started, listening on http://localhost:$PORT/"
        exit 0
      else
        echo "ezPAARSE cannot be started."
        exit 1
      fi
    fi
  ;;

  stop)
    if [ ! -d /proc/`cat $EZPAARSE_PIDFILE` ]; then
      echo "ezPAARSE is already stopped."
      exit 0
    else
      ezpaarse_stop
      if [ -d /proc/`cat $EZPAARSE_PIDFILE` ]; then
        echo "ezPAARSE cannot be stopped."
        exit 1
      else
        echo "ezPAARSE is stopped."
        exit 0
      fi
    fi
  ;;

  restart | reload | force-reload)
    if [ ! -d /proc/`cat $EZPAARSE_PIDFILE` ]; then
      ezpaarse_start
    else
      ezpaarse_restart
    fi
    if [ -d /proc/`cat $EZPAARSE_PIDFILE` ]; then
      echo "ezPAARSE has been restarted, listening on http://localhost:$PORT/"
      exit 0
    else
      echo "ezPAARSE cannot be restarted."
      exit 1
    fi    
  ;;

  status)
    if [ -d /proc/`cat $EZPAARSE_PIDFILE` ]; then
      echo "ezPAARSE is running, listening on http://localhost:$PORT/"
      exit 0
    else
      echo "ezPAARSE is not running."
      exit 1
    fi
  ;;

  *)
    echo "Usage: $0 {start|stop|restart|status}"
    exit 1
  ;;

esac
