#!/usr/bin/env node

/*jslint node: true, maxlen: 100, maxerr: 50, indent: 2 */
'use strict';
var byline      = require('byline');
var URL         = require('url');
var querystring = require('querystring');

function parseUrl(url) {
    var result    = {};
    var parsedUrl = URL.parse(url);
    var param     = querystring.parse(parsedUrl.query);
    var path      = parsedUrl.path;
    var match;
    
    if (match = /\/journal\/([0-9]+)/.exec(path)) {
      result.pid = match[1];
      result.type = 'TOC';
    } else if (match = /\/article\/([0-9]+\.[0-9]+\/.*)\/fulltext.html/.exec(path)) {
      var identifier = match[1];
      result.type = 'TXT';
      result.doi = match[1];
    } else if (match = /\/(article|book)\/([0-9]+\.[0-9]+\/.*)/.exec(path)) {
      result.type = match[1] == 'article' ? 'TOC' : 'BOOK';
      result.doi = match[2];
    } else if (match = /\/content\/pdf\/([0-9]+\.[0-9]+\/.*)/.exec(path)) {
      result.type = 'PDF';
      result.doi = match[1];
    } else if (match = /\/bookseries\/([0-9]+)/.exec(path)) {
      result.type = 'BOOKSERIES';
      result.pid = match[1];
    }
    return result;
  }

/*
* If an array of urls is given, return an array of results
* Otherwise, read stdin and write into stdout
*/
exports.parserExecute = function (urls) {

  if (urls && Array.isArray(urls)) {
    var results = [];
    for (var i = 0, l = urls.length; i < l; i++) {
      results.push(parseUrl(urls[i]));
    }
    return results;
  } else {
    var stdin = process.stdin;
    var stdout = process.stdout;
    var stream = byline.createStream(stdin);

    stream.on('end', function () {
      process.exit(0);
    });

    stream.on('close  ', function () {
      process.exit(0);
    });

    stream.on('data', function (line) {
      stdout.write(JSON.stringify(parseUrl(line)) + '\n');
    });
  }
}

if (!module.parent) {
  var optimist = require('optimist')
    .usage('Parse URLs read from standard input. ' +
      'You can either use pipes or enter URLs manually.' +
      '\n  Usage: $0' +
      '\n  Example: cat urls.txt | $0');
  var argv = optimist.argv;

  // show usage if --help option is used
  if (argv.help || argv.h) {
    optimist.showHelp();
    process.exit(0);
  }

  exports.parserExecute();
}